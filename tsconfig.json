{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@images/*": ["src/assets/images/*"],
            "@redux/*": ["src/redux/*"],
            "@components/*": ["src/components/*"],
            "@screens/*": ["src/screens/*"],
            "@api/*": ["src/screens/*"],
            "@layout/*": ["src/screens/*"],
            "@data/*": ["src/screens/*"],
            "@modules/*": ["src/screens/*"],
            "@route/*": ["src/screens/*"],
            "@utils/*": ["src/screens/*"]
        }
    },
    "include": ["src"]
}
